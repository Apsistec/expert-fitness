    "node": "8"
  },
  "main": "lib/index.ts",
  "dependencies": {
    "@google-cloud/logging": "^8.0.8",
    "@types/stripe-v3": "^3.1.20",
    "firebase-admin": "^9.2.0",
    "firebase-functions": "^3.11.0",
    "stripe": "^8.88.0"
  },
  "devDependencies": {
    "firebase-functions-test": "^0.2.2",
    "tslint": "^5.12.0",
    "typescript": "^3.8.0"
  },
  "private": true
}
